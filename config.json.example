{
  "monitoring": {
    "check_interval_hours": 3,
    "enable_stories": true,
    "enable_posts": true,
    "enable_followers": true,
    "enable_detailed_analysis": true,
    "max_history_entries": 1000,
    "rate_limit_delay": 2,
    "retry_attempts": 3,
    "timeout_seconds": 30
  },
  "notifications": {
    "github_issues": {
      "enabled": true,
      "significant_changes_only": true,
      "labels": ["instagram-monitor", "automated"]
    },
    "email": {
      "enabled": false,
      "on_new_post": true,
      "on_follower_change": true,
      "on_bio_change": true,
      "minimum_follower_change": 10
    },
    "webhook": {
      "enabled": false,
      "on_all_changes": false,
      "format": "slack"
    }
  },
  "dashboard": {
    "theme": "auto",
    "show_sensitive_data": false,
    "chart_animation": true,
    "refresh_interval_minutes": 5,
    "max_activity_items": 20,
    "show_engagement_metrics": true,
    "date_format": "relative"
  },
  "analytics": {
    "calculate_growth_trends": true,
    "engagement_rate_tracking": true,
    "posting_pattern_analysis": true,
    "peak_activity_detection": true
  },
  "security": {
    "mask_sensitive_info": true,
    "log_level": "INFO",
    "secure_session_storage": true
  },
  "targets": {
    "primary": "",
    "additional": [],
    "monitoring_notes": {}
  },
  "advanced": {
    "custom_user_agent": "",
    "proxy_settings": null,
    "backup_frequency": "daily",
    "data_retention_days": 365
  },
  "metadata": {
    "config_version": "2.0",
    "created_date": "2024-01-01",
    "description": "Instagram Monitor configuration template"
  }
}
